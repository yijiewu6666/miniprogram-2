/* General container for input fields, pickers, and buttons */
.container {
    display: block;
    width: 100%; /* Full width of the container */
    padding: 0 15px; /* Padding on both sides */
}

/* Base style for inputs and pickers */
.input-field, .picker-field, textarea {
    border: 1px solid #dcdcdc; /* Light border color */
    border-radius: 15px; /* Rounded corners */
    padding: 15px; /* Padding to increase tap area */
    margin: 10px 0; /* Margin for spacing between fields */
    font-size: 16px; /* Font size */
    color: #000; /* Text color */
    display: block; /* Ensuring block-level display */
    width: 100%; /* Full width */
    box-sizing: border-box; /* Including padding and border in the width */
}

/* Base styles for all buttons */
button {
    padding: 10px; /* Smaller padding */
    border-radius: 10px; /* Smaller rounded corners */
    border: none; /* No border */
    margin: 5px 0; /* Smaller margin */
    font-size: 14px; /* Smaller font size */
}

/* Specific style for the 'Choose Image' button */
.choose-image-button {
    background-color: #007BFF; /* Blue background for buttons */
    color: white; /* White text for contrast */
    width: 90%; /* Smaller width */
    text-align: left; /* Align text to the left */
    margin-left: 5%; /* Align to the left with margin */
}

/* Specific style for the 'Publish' button */
.publish-button {
    background-color: #007BFF; /* Blue background for buttons */
    color: white; /* White text for contrast */
    width: 50%; /* Half the width of the container */
    text-align: center; /* Center text */
    margin: 10px auto; /* Centered horizontally */
}

/* Styling for the description textarea */
.textarea-field {
    background-color: #ffffff; /* White background for contrast */
    border: 1px solid #cccccc; /* Consistent light border */
    border-radius: 4px; /* Slightly rounded corners */
}

/* Style adjustments for picker views */
picker-view {
    display: block;
    width: 100%;
}

/* No additional styles for image preview as it inherits correctly */
.image-preview {
    display: block; /* Ensuring block-level display */
    width: 100%; /* Full width */
}

